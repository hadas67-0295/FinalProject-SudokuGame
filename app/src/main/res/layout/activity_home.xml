<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface">

    <View
        android:id="@+id/home_header_bg"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="@drawable/bg_button_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Theme.FinalProjectSudokuGame.Popup"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/home_tvGameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sudoku Classic"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/on_primary"
        android:letterSpacing="0.04"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_toolbar"
        android:layout_marginTop="8dp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardElevation="12dp"
        app:cardCornerRadius="32dp"
        app:layout_constraintTop_toBottomOf="@id/home_header_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="32dp"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/home_btnNewGame"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_button_gradient"
                android:text="New Game"
                android:textAllCaps="false"
                android:textColor="@color/on_primary"
                android:textSize="17sp"
                app:backgroundTint="@null"
                app:icon="@android:drawable/ic_media_play"
                app:iconGravity="start"
                app:iconPadding="12dp" />

            <Button
                android:id="@+id/home_btnContinueGame"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:text="Continue Game"
                android:textSize="17sp"
                android:textColor="@color/primary"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_outlined_rounded"
                app:iconPadding="12dp"
                app:backgroundTint="@null"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/home_btnInstructions"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:text="ðŸ“–  Instructions"
                android:textSize="17sp"
                android:textColor="@color/primary_dark"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_outlined_rounded"
                app:backgroundTint="@null" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
