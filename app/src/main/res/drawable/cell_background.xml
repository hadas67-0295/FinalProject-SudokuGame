<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color of the cell -->
    <solid android:color="@android:color/white" />

    <!-- Thin, faded border around every cell -->
    <stroke
        android:width="1dp"
        android:color="#D0D0D0" /> <!-- light gray, subtle -->

    <!-- Slight inner padding so text doesn't touch the border -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>
